# --- UncGPT example env (no secrets) ---
PORT=3000
BASE_URL=http://localhost:3000

# Bits mapping (StreamElements): 1 bit = 1Â¢ by default
BITS_TO_CENTS=1

# OpenAI (leave blank here; fill in your local .env)
OPENAI_API_KEY=

# Models
OPENAI_MODEL_FREE=gpt-4o-mini
OPENAI_MODEL_PAID=gpt-4o

# Default TTS voice
OPENAI_TTS_VOICE=ash

# Pricing thresholds (in cents)
FREE_TIER_MIN_CENTS=100   # $1+
HYPE_TIER_MIN_CENTS=300   # $3+
# ...existing keys...

# Twitch reward filtering
TWITCH_ALLOWED_REWARD_TITLE=Ask UncGPT   # only queue this reward (case-insensitive)
TWITCH_REQUIRE_TEXT=true                 # optional: ignore redeems with no typed message

# Admin token for protected endpoints (choose your own in .env)
ADMIN_TOKEN=

